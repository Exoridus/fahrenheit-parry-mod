{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/Exoridus/fahrenheit-parry-mod/docs/dev-local.schema.json",
  "title": "Local Developer Config",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "GAME_DIR": {
      "type": "string",
      "description": "Absolute path to game install directory containing FFX.exe."
    },
    "DEPLOY_MODE": {
      "type": "string",
      "enum": ["none", "update", "replace", "mod-only"],
      "description": "Automatic deploy behavior for full builds. Use 'none' to disable."
    }
  },
  "required": ["GAME_DIR", "DEPLOY_MODE"],
  "examples": [
    {
      "GAME_DIR": "C:\\Games\\Final Fantasy X-X2 - HD Remaster",
      "DEPLOY_MODE": "update"
    }
  ]
}
